extends layouts/_home.pug

block vars
  include _config.pug
  - var key = "home"
  - var page = pages[key]

block contents
  .parallax
    h2.message 
      | "shape your heart"
      br
      | "make your sense"

    a(href="#container").parallax__scroll.js-smooth-scroll Scroll

  .container#container
    .service
      h2.service__title "What can we do"

      .service__container
        .service__card
          img.service__icon(src="../images/icon/earth.svg" alt="")
          .service__content Webデジタルマーケティング / 広告・SMS運用サポート
          a.service__link(href="/service/marketing.html") READ MORE
      .service__container
        .service__card
          img.service__icon(src="../images/icon/film.svg" alt="")
          .service__content 動画 / クリエイティブ制作
          a.service__link(href="/service/movie.html") READ MORE
      .service__container
        .service__card
          img.service__icon(src="../images/icon/play.svg" alt="")
          .service__content YouTubeマーケティング・グロース支援
          a.service__link(href="/service/consulting.html") READ MORE
      .service__container
        .service__card
          img.service__icon(src="../images/icon/video-camera.svg" alt="")
          .service__content ライブ配信事業
          a.service__link(href="/service/streaming.html") READ MORE
      .service__container
        .service__card
          img.service__icon(src="../images/icon/display.svg" alt="")
          .service__content Web・アプリ開発事業
          a.service__link(href="/service/web.html") READ MORE

  .about
    .about__container
      h2.about__title "Image about service"
      a.about__link(href="/service") All service
    .about__container
      video.about__video(controls src="../media/about.mp4" poster="../images/pages/top/poster.png")
